---
# From: https://jaas.ai/charmed-kubernetes
# https://api.jujucharms.com/charmstore/v5/bundle/charmed-kubernetes-761/archive/bundle.yaml

description: A highly-available, production-grade Kubernetes cluster.
series: focal
machines:
{% for item in groups['all_controller_nodes'] + groups['all_compute_nodes'] %}
  "{{ loop.index0 }}":
{% endfor %}
applications:
  containerd:
    annotations:
      gui-x: '475'
      gui-y: '800'
    charm: cs:~containers/containerd-160
    resources: {}
  easyrsa:
    annotations:
      gui-x: '90'
      gui-y: '420'
    charm: cs:~containers/easyrsa-408
    constraints: root-disk=8G
    num_units: 1
    resources:
      easyrsa: 5
    to:
{% if groups['all_compute_nodes'] | count > 0 %}
    # This means that we will deploy the application
    # in the first worker node as the numbering starts
    # at 0. So, the count of master nodes index will be
    # the first worker node.
    - "{{ groups['all_controller_nodes'] | count }}"
{% else %}
    - "0"
{% endif %}
  etcd:
    annotations:
      gui-x: '800'
      gui-y: '420'
    charm: cs:~containers/etcd-620
    constraints: root-disk=8G
    num_units: {{ groups['all_controller_nodes'] | count }}
    options:
      channel: 3.4/stable
    resources:
      core: 0
      etcd: 3
      snapshot: 0
    to:
{% for item in groups['all_controller_nodes'] %}
    - "{{ loop.index0 }}"
{% endfor %}
  flannel:
    annotations:
      gui-x: '475'
      gui-y: '605'
    charm: cs:~containers/flannel-584
    resources:
      flannel-amd64: 844
      flannel-arm64: 841
      flannel-s390x: 828
  kubeapi-load-balancer:
    annotations:
      gui-x: '450'
      gui-y: '250'
    charm: cs:~containers/kubeapi-load-balancer-827
    constraints: mem=4G root-disk=8G
    expose: true
    num_units: 1
    resources: {}
    to:
{% if groups['all_compute_nodes'] | count > 0 %}
    # This means that we will deploy the application
    # in the first worker node as the numbering starts
    # at 0. So, the count of master nodes index will be
    # the first worker node.
    - "{{ groups['all_controller_nodes'] | count }}"
{% else %}
    - "0"
{% endif %}
  kubernetes-master:
    annotations:
      gui-x: '800'
      gui-y: '850'
    charm: cs:~containers/kubernetes-master-1051
    constraints: cores=2 mem=4G root-disk=16G
    num_units: {{ groups['all_controller_nodes'] | count }}
    options:
      channel: 1.22/stable
    resources:
      cdk-addons: 0
      core: 0
      kube-apiserver: 0
      kube-controller-manager: 0
      kube-proxy: 0
      kube-scheduler: 0
      kubectl: 0
    to:
{% for item in groups['all_controller_nodes'] %}
    - "{{ loop.index0 }}"
{% endfor %}
{% if groups['all_compute_nodes'] | count > 0 %}
  kubernetes-worker:
    annotations:
      gui-x: '90'
      gui-y: '850'
    charm: cs:~containers/kubernetes-worker-801
    constraints: cores=4 mem=4G root-disk=16G
    expose: true
    num_units: {{ groups['all_compute_nodes'] | count }}
    options:
      channel: 1.22/stable
    resources:
      cni-amd64: 880
      cni-arm64: 871
      cni-s390x: 883
      core: 0
      kube-proxy: 0
      kubectl: 0
      kubelet: 0
    to:
{% for item in groups['all_compute_nodes'] %}
    - "{{ loop.index0 + groups['all_controller_nodes'] | count }}"
{% endfor %}
{% endif %}
relations:
- - kubernetes-master:loadbalancer-external
  - kubeapi-load-balancer:lb-consumers
- - kubernetes-master:loadbalancer-internal
  - kubeapi-load-balancer:lb-consumers
{% if groups['all_compute_nodes'] | count > 0 %}
- - kubernetes-master:kube-control
  - kubernetes-worker:kube-control
{% endif %}
- - kubernetes-master:certificates
  - easyrsa:client
- - etcd:certificates
  - easyrsa:client
- - kubernetes-master:etcd
  - etcd:db
{% if groups['all_compute_nodes'] | count > 0 %}
- - kubernetes-worker:certificates
  - easyrsa:client
{% endif %}
- - kubeapi-load-balancer:certificates
  - easyrsa:client
- - flannel:etcd
  - etcd:db
- - flannel:cni
  - kubernetes-master:cni
{% if groups['all_compute_nodes'] | count > 0 %}
- - flannel:cni
  - kubernetes-worker:cni
- - containerd:containerd
  - kubernetes-worker:container-runtime
{% endif %}
- - containerd:containerd
  - kubernetes-master:container-runtime
