acl internals {
    127.0.0.0/8;
    {{ kubeinit_cluster_network }};
};

view "internal" {
    match-clients { internals; };

    include "/etc/bind/zones.rfc1918";
    include "/etc/bind/named.conf.default-zones";

    /*zone "." IN {*/
    /*    type hint;*/
    /*    file "named.ca";*/
    /*};*/

    zone "{{ kubeinit_cluster_fqdn }}" {
        type master;
        file "/etc/bind/kubeinit/zones/internals/db.{{ kubeinit_cluster_fqdn }}"; # zone file path
    };

    zone "{{ kubeinit_bind_service_address | ipaddr('revdns') | regex_replace('^[0-9]+\\.', '') }}" {
        type master;
        file "/etc/bind/kubeinit/zones/internals/db.{{ kubeinit_bind_service_address | ipsubnet(24) | ipaddr('network') }}";  # 192.168.1.0/24 subnet
    };

{% if kubeinit_bind_multicluster_dns_forward_enabled and kubeinit_cluster_distro == "okd" %}
    zone "{{ lookup('ini', 'kubeinit_cluster_name section=all:vars file='+kubeinit_bind_multicluster_rke_inventory) }}.{{ lookup('ini', 'kubeinit_inventory_cluster_domain section=all:vars file='+kubeinit_bind_multicluster_rke_inventory) }}" IN {
        type forward;
        forward only;
        forwarders {
            {{ lookup('ini', 'kubeinit_inventory_cluster_nameserver section=all:vars file='+kubeinit_bind_multicluster_rke_inventory) }};
        };
    };
{% elif kubeinit_bind_multicluster_dns_forward_enabled and kubeinit_cluster_distro == "rke" %}
    zone "{{ lookup('ini', 'kubeinit_cluster_name section=all:vars file='+kubeinit_bind_multicluster_okd_inventory) }}.{{ lookup('ini', 'kubeinit_inventory_cluster_domain section=all:vars file='+kubeinit_bind_multicluster_okd_inventory) }}" IN {
        type forward;
        forwarders {
            {{ lookup('ini', 'kubeinit_inventory_cluster_nameserver section=all:vars file='+kubeinit_bind_multicluster_okd_inventory) }};
        };
    };
{% endif %}

};

acl bridge {
    172.16.0.0/24;
};

view "bridge" {
    match-clients { bridge; };
    allow-query { any; };

    zone "{{ kubeinit_cluster_fqdn }}" {
        type master;
        file "/etc/bind/kubeinit/zones/internals/db.{{ kubeinit_cluster_fqdn }}"; # zone file path
    };

};
