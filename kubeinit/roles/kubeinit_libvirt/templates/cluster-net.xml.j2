{% if kubeinit_libvirt_ovn_enabled %}
<network>
  <name>{{ item.name }}</name>
  <forward mode='bridge'></forward>
  <bridge name='br-int'/>
  <virtualport type='openvswitch'/>
</network>
{% else %}
<network>
  <name>{{ item.name }}</name>
  <forward mode='nat'>
  <nat>
    <port start='1024' end='65535'/>
  </nat>
  </forward>
  <bridge name='{{ item.bridge }}' stp='on' delay='0'/>
  <ip address='{{ item.gateway }}' netmask='{{ item.netmask }}'>
      <dhcp>
          <range start='{{ item.start }}' end='{{ item.end }}'/>
          {% if item.main %}
          {% for host in groups['all'] | map('regex_search','^((?!hypervisor).)*$') | select('string') | list %}
          <host mac="{{ hostvars[host].mac }}" name="{{ host }}.{{ kubeinit_inventory_cluster_domain }}" ip="{{ hostvars[host].ansible_host }}"/>
          {% endfor %}
          {% endif %}
      </dhcp>
  </ip>
  <dns>
  <forwarder addr="{{ hostvars[ groups['all'] | map('regex_search','^.*service.*$') | select('string') | list | first ].ansible_host }}"/>
  </dns>
</network>
{% endif %}
