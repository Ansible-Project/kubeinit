{% for host in groups['k8s_master_nodes'] %}
{{ hostvars[groups['k8s_master_nodes'][loop.index - 1]].ansible_host.split('.')[-1] }} IN PTR {{ host }}.{{kubeinit_common_cluster_name}}.{{ kubeinit_common_cluster_domain }}.
{% endfor %}

